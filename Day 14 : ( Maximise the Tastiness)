#include <bits/stdc++.h>
using namespace std;

int main() {
	int T;
	cin>>T;
	for(int i=0;i<T;i++){
	    int a, b, c, d;
	    cin>>a>>b>>c>>d;
	    if(a>b){
	        if(c>d)
	        cout<<(a+c)<<endl;
	        else
	        cout<<(a+d)<<endl;
	    }
	    else{
	        if(c>d)
	        cout<<(b+c)<<endl;
	        else
	        cout<<(b+d)<<endl;
	    }
	}

}
