#include <bits/stdc++.h>
using namespace std;

int main() {
	int T;
	cin>>T;
	while(T--){
	    int N;
	    cin>>N;
	    int A[N];
	    for(int i=0;i<N;i++)
	    cin>>A[i];
	    int s=0;
	    for(int i=0;i<N;i++)
	    {
	        s+=A[i];
	    }
	    if(s==0)
	    cout<<"0"<<endl;
	    else {
	        if(abs(s)%2==0)
	         cout<<abs(s)/2<<endl;
	        else 
	          cout<<"-1"<<endl;
	       }
	  	}

}
