#include <bits/stdc++.h>
using namespace std;

int main() {
     int T;
     cin>>T;
     while (T--){
         int N;
         cin>>N;
         int S[N];
         for(int i=0;i<N;i++){
             cin>>S[i];
         }
        
         long long b=0;
         for(int i=0;i<N-1;i++){
             int a=abs(S[i+1]-S[i])-1;
             b+=a;
         }
         cout<<b<<endl;
     }
	     
}
